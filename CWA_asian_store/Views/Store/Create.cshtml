@model CWA_asian_store.Entity.Model.Product

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Додати новий товар</title>
    <style>
        body {
            font-family: Arial;
            background-color: #fdf6ec;
            margin: 40px;
        }

        h1 {
            color: #d35400;
        }

        form {
            max-width: 500px;
            background: white;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 0 10px #ddd;
        }

        label {
            display: block;
            margin-top: 10px;
        }

        input, textarea {
            width: 100%;
            padding: 8px;
            margin-top: 5px;
            border-radius: 5px;
            border: 1px solid #ccc;
        }

        button {
            margin-top: 15px;
            background-color: #d35400;
            color: white;
            border: none;
            padding: 10px 15px;
            border-radius: 5px;
            cursor: pointer;
        }

            button:hover {
                background-color: #e67e22;
            }

        a {
            display: inline-block;
            margin-top: 10px;
            color: #d35400;
            text-decoration: none;
        }
    </style>
</head>
<body>
    <h1>➕ Додати новий товар</h1>

    <form asp-action="Create" method="post">
        @Html.AntiForgeryToken()

        <label>Назва</label>
        <input asp-for="Name" required />

        <label>Опис</label>
        <textarea asp-for="Description"></textarea>

        <label>Категорія</label>
        <input asp-for="Category" />

        <label>Ціна</label>
        <input asp-for="Price" type="number" step="0.01" required />

        <button type="submit">Зберегти</button>
    </form>


    <a href="/Store/Index">← Повернутись до списку товарів</a>
</body>
</html>
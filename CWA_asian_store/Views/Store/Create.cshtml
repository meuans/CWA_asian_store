@model CWA_asian_store.Entity.Model.Product
<div asp-validation-summary="All" style="color:red"></div>
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Додати новий товар</title>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Roboto', Arial, sans-serif;
            background: linear-gradient(135deg, #fefefe, #ffe6d6);
            margin: 0;
            padding: 0;
            height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .container {
            background: #fff;
            padding: 40px 50px;
            border-radius: 16px;
            box-shadow: 0 12px 25px rgba(0,0,0,0.15);
            width: 450px;
            max-width: 90%;
            text-align: center;
            transition: transform 0.3s;
        }

            .container:hover {
                transform: translateY(-5px);
            }

        h1 {
            color: #d35400;
            margin-bottom: 25px;
            font-size: 28px;
        }

        label {
            display: block;
            margin: 12px 0 6px;
            font-weight: 500;
            text-align: left;
        }

        input, textarea, select {
            width: 100%;
            padding: 12px;
            margin-bottom: 18px;
            border-radius: 10px;
            border: 1px solid #ddd;
            font-size: 15px;
            transition: all 0.3s;
        }

            input:focus, textarea:focus, select:focus {
                border-color: #d35400;
                outline: none;
                box-shadow: 0 0 8px rgba(211,84,0,0.3);
            }

        select {
            cursor: pointer;
            appearance: none;
            background: url('data:image/svg+xml;utf8,<svg fill="gray" height="24" viewBox="0 0 24 24" width="24" xmlns="http://www.w3.org/2000/svg"><path d="M7 10l5 5 5-5z"/></svg>') no-repeat right 12px center;
            background-color: #fff;
            background-size: 16px;
        }

        button {
            background: linear-gradient(135deg, #d35400, #e67e22);
            color: #fff;
            border: none;
            padding: 14px 0;
            border-radius: 10px;
            cursor: pointer;
            width: 100%;
            font-size: 16px;
            font-weight: 500;
            transition: all 0.3s;
        }

            button:hover {
                background: linear-gradient(135deg, #e67e22, #d35400);
                transform: translateY(-2px);
                box-shadow: 0 6px 12px rgba(0,0,0,0.2);
            }

        a {
            display: inline-block;
            margin-top: 18px;
            color: #d35400;
            text-decoration: none;
            font-size: 14px;
            font-weight: 500;
            transition: color 0.3s;
        }

            a:hover {
                color: #e67e22;
            }

        textarea {
            resize: vertical;
            min-height: 80px;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>➕ Додати новий товар</h1>

        <form asp-controller="Store" asp-action="Create" method="post">
            @Html.AntiForgeryToken()

            <label>Назва</label>
            <input asp-for="Name" placeholder="Введіть назву товару" required />

            <label>Опис</label>
            <textarea asp-for="Description" placeholder="Введіть опис товару"></textarea>

            <label>Категорія</label>
            <select asp-for="CategoryId" asp-items="ViewBag.Categories" class="custom-select">
            </select>

            <style>
               
                .custom-select {
                    width: 100%;
                    padding: 12px 15px;
                    border-radius: 10px;
                    border: 1px solid #ddd;
                    font-size: 15px;
                    appearance: none; 
                    background-color: #fff;
                    background-image: url('data:image/svg+xml;utf8,<svg fill="gray" height="20" viewBox="0 0 24 24" width="20" xmlns="http://www.w3.org/2000/svg"><path d="M7 10l5 5 5-5z"/></svg>');
                    background-repeat: no-repeat;
                    background-position: right 12px center;
                    background-size: 16px;
                    cursor: pointer;
                    transition: all 0.3s;
                }

                    .custom-select:focus {
                        border-color: #d35400;
                        box-shadow: 0 0 8px rgba(211,84,0,0.3);
                        outline: none;
                    }

                    
                    .custom-select option:hover {
                        background-color: #ffe6d6;
                    }
            </style>

            <label>Ціна</label>
            <input asp-for="Price" type="number" step="0.01" placeholder="0.00" min="0" required />

            <button type="submit">Зберегти</button>
        </form>

        <a href="/Store/Index">← Повернутись до списку товарів</a>
    </div>
</body>
</html>

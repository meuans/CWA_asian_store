@model CWA_asian_store.Entity.Model.Product

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Додати новий товар</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background: linear-gradient(135deg, #f8ede3, #fde2d2);
            margin: 0;
            padding: 0;
            height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .container {
            background: #fff;
            padding: 30px 40px;
            border-radius: 12px;
            box-shadow: 0 8px 20px rgba(0,0,0,0.1);
            width: 400px;
            text-align: center;
        }

        h1 {
            color: #d35400;
            margin-bottom: 20px;
        }

        label {
            display: block;
            margin: 10px 0 5px;
            font-weight: bold;
            text-align: left;
        }

        input, textarea {
            width: 100%;
            padding: 10px;
            margin-bottom: 15px;
            border-radius: 8px;
            border: 1px solid #ccc;
            transition: 0.3s;
        }

            input:focus, textarea:focus {
                border-color: #d35400;
                outline: none;
                box-shadow: 0 0 5px rgba(211,84,0,0.4);
            }

        button {
            background: #d35400;
            color: #fff;
            border: none;
            padding: 12px 20px;
            border-radius: 8px;
            cursor: pointer;
            width: 100%;
            font-size: 16px;
            transition: background 0.3s;
        }

            button:hover {
                background: #e67e22;
            }

        a {
            display: inline-block;
            margin-top: 15px;
            color: #d35400;
            text-decoration: none;
            font-size: 14px;
        }

            a:hover {
                text-decoration: underline;
            }
    </style>
</head>
<body>
    <div class="container">
        <h1>➕ Додати новий товар</h1>

        <form asp-action="Create" method="post">
            @Html.AntiForgeryToken()

            <label>Назва</label>
            <input asp-for="Name" required />

            <label>Опис</label>
            <textarea asp-for="Description"></textarea>

            <label>Категорія</label>
            <input asp-for="Category" />

            <label>Ціна</label>
            <input asp-for="Price" type="number" step="0.01" required />

            <button type="submit">Зберегти</button>
        </form>

        <a href="/Store/Index">← Повернутись до списку товарів</a>
    </div>
</body>
</html>

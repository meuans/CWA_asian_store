@model IEnumerable<CWA_asian_store.Entity.Model.Product>

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Asian Food Store</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background: linear-gradient(135deg, #f8ede3, #fde2d2);
            margin: 0;
            padding: 0;
            height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .container {
            background: #fff;
            padding: 30px 40px;
            border-radius: 12px;
            box-shadow: 0 8px 20px rgba(0,0,0,0.1);
            width: 80%;
            max-width: 900px;
        }

        h1 {
            color: #d35400;
            margin-bottom: 20px;
            text-align: center;
        }

        .top-bar {
            display: flex;
            justify-content: flex-end;
            margin-bottom: 15px;
        }

        .btn-add {
            display: inline-block;
            background: #d35400;
            color: white;
            padding: 10px 15px;
            border-radius: 8px;
            text-decoration: none;
            transition: background 0.3s;
        }

            .btn-add:hover {
                background: #e67e22;
            }

        table {
            border-collapse: collapse;
            width: 100%;
            background-color: white;
            border-radius: 10px;
            overflow: hidden;
            box-shadow: 0 4px 10px rgba(0,0,0,0.05);
        }

        th, td {
            padding: 12px 15px;
            text-align: left;
        }

        th {
            background-color: #f8c471;
            color: #333;
            font-weight: bold;
        }

        tr:nth-child(even) {
            background-color: #fdf2e9;
        }

        tr:hover {
            background-color: #fdebd0;
            transition: 0.2s;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>🍱 Азійський магазин</h1>

        <div class="top-bar">
            <a href="/Store/Create" class="btn-add">➕ Додати товар</a>
        </div>

        <table>
            <thead>
                <tr>
                    <th>Назва</th>
                    <th>Опис</th>
                    <th>Категорія</th>
                    <th>Ціна (грн)</th>
                    <th>Дії</th> 
                </tr>
            </thead>
            <tbody>
                @foreach (var product in Model)
                {
                    <tr>
                        <td>@product.Name</td>
                        <td>@product.Description</td>
                        <td>@product.Category</td>
                        <td>@product.Price</td>
                        <td>
                            <form asp-action="Delete" method="post" style="display:inline;">
                                <input type="hidden" name="id" value="@product.Id" />
                                <button type="submit" style="background:#e74c3c; color:white; border:none; padding:5px 10px; border-radius:6px; cursor:pointer;"
                                        onclick="return confirm('Ви впевнені, що хочете видалити цей товар?');">
                                     Видалити
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
</body>
</html>

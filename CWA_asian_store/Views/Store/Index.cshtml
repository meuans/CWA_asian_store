@model IEnumerable<CWA_asian_store.Entity.Model.Product>

@{
    //  приведення ViewData["CurrentPage"] та ["TotalPages"] до int
    int currentPage = ViewData["CurrentPage"] as int? ?? 1;
    int totalPages = ViewData["TotalPages"] as int? ?? 1;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Asian Food Store</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background: linear-gradient(135deg, #f8ede3, #fde2d2);
            margin: 0;
            padding: 0;
            height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .container {
            background: #fff;
            padding: 30px 40px;
            border-radius: 12px;
            box-shadow: 0 8px 20px rgba(0,0,0,0.1);
            width: 80%;
            max-width: 900px;
        }

        h1 {
            color: #d35400;
            margin-bottom: 20px;
            text-align: center;
        }

        .top-bar {
            display: flex;
            justify-content: flex-end;
            margin-bottom: 15px;
        }

        .btn-add {
            display: inline-block;
            background: #d35400;
            color: white;
            padding: 10px 15px;
            border-radius: 8px;
            text-decoration: none;
            transition: background 0.3s;
        }

            .btn-add:hover {
                background: #e67e22;
            }

        table {
            border-collapse: collapse;
            width: 100%;
            background-color: white;
            border-radius: 10px;
            overflow: hidden;
            box-shadow: 0 4px 10px rgba(0,0,0,0.05);
        }

        th, td {
            padding: 12px 15px;
            text-align: left;
        }

        th {
            background-color: #f8c471;
            color: #333;
            font-weight: bold;
        }

        tr:nth-child(even) {
            background-color: #fdf2e9;
        }

        tr:hover {
            background-color: #fdebd0;
            transition: 0.2s;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>🍱 Азійський магазин</h1>

        <div class="top-bar">
            <a href="/Store/Create" class="btn-add">➕ Додати товар</a>
        </div>

        <form method="get" asp-action="Index" style="text-align: center; margin-bottom: 25px;">
            <div style="
        display: inline-flex;
        align-items: center;
        border: 2px solid #e67e22;
        border-radius: 8px;
        padding: 5px 10px;
        background: #fff3e0;
        box-shadow: 0 3px 6px rgba(0,0,0,0.1);
    ">
                <input type="text" name="search" value="@ViewBag.Search"
                       placeholder="🔍 Введіть назву товару..."
                       style="
                   border: none;
                   outline: none;
                   background: transparent;
                   font-size: 16px;
                   width: 250px;
                   padding: 5px;
               " />

                <button type="submit"
                        style="
                    background: #e67e22;
                    color: white;
                    border: none;
                    padding: 8px 16px;
                    border-radius: 6px;
                    cursor: pointer;
                    font-weight: bold;
                    transition: background 0.3s;
                ">
                    🔎 Шукати
                </button>
            </div>

            @* Кнопка повернення *@
            @if (!string.IsNullOrEmpty(ViewBag.Search))
            {
                <a href="/Store/Index"
                   style="margin-left: 15px; color: #d35400; text-decoration: none; font-weight: bold;">
                    ← Повернутись до всіх товарів
                </a>
            }

            @* Кнопка сортування *@
            @{
                string nextSortOrder = ViewBag.SortOrder == "asc" ? "desc" : "asc";
                string icon = ViewBag.SortOrder == "asc" ? "⬇️" : "⬆️";
            }

            <a href="@Url.Action("Index", new { search = ViewBag.Search, sortOrder = nextSortOrder })"
               style="
       margin-left: 20px;
       background: #f39c12;
       color: white;
       padding: 8px 14px;
       border-radius: 6px;
       text-decoration: none;
       font-weight: bold;
       box-shadow: 0 3px 6px rgba(0,0,0,0.1);
       transition: background 0.3s;
       display: inline-block;
       width: 160px;
       text-align: center;
           ">
                Сортувати @icon
            </a>




        </form>





        <table>
            <thead>
                <tr>
                    <th>Назва</th>
                    <th>Опис</th>
                    <th>Категорія</th>
                    <th>Ціна (грн)</th>
                    <th>Дії</th> 
                </tr>
            </thead>
            <tbody>
                @foreach (var product in Model)
                {
                    <tr>
                        <td>@product.Name</td>
                        <td>@product.Description</td>
                        <td>@product.Category?.Name</td>
                        <td>@product.Price</td>
                        <td>

                            <!-- Кнопка Редагувати -->
                            <a asp-action="Edit" asp-route-id="@product.Id"
                               style="background:#3498db; color:white; padding:5px 10px; border-radius:6px; text-decoration:none; margin-right:5px;">
                                ✏️ Редагувати
                            </a>

                            <!-- Форма Видалити -->
                            <form asp-action="Delete" method="post" style="display:inline;">
                                <input type="hidden" name="id" value="@product.Id" />
                                <button type="submit" style="background:#e74c3c; color:white; border:none; padding:5px 10px; border-radius:6px; cursor:pointer;"
                                        onclick="return confirm('Ви впевнені, що хочете видалити цей товар?');">
                                     Видалити
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        @if (totalPages > 1)
        {
            <div style="text-align:center; margin-top:20px;">
                @if (currentPage > 1)
                {
                    <form asp-action="Index" method="get" style="display:inline-block; margin-right:10px;">
                        <input type="hidden" name="search" value="@ViewBag.Search" />
                        <input type="hidden" name="sortOrder" value="@ViewBag.SortOrder" />
                        <input type="hidden" name="pageNumber" value="@(Math.Max(currentPage - 1, 1))" />
                        <button type="submit" style="padding:6px 12px; border-radius:6px; background:#f39c12; color:white; border:none;">
                            ⬅️
                        </button>
                    </form>
                }

                <span style="margin:0 15px; font-weight:bold;">
                    Сторінка <strong>@currentPage</strong> із <strong>@totalPages</strong>
                </span>

                @if (currentPage < totalPages)
                {
                    <form asp-action="Index" method="get" style="display:inline-block; margin-left:10px;">
                        <input type="hidden" name="search" value="@ViewBag.Search" />
                        <input type="hidden" name="sortOrder" value="@ViewBag.SortOrder" />
                        <input type="hidden" name="pageNumber" value="@(Math.Min(currentPage + 1, totalPages))" />
                        <button type="submit" style="padding:6px 12px; border-radius:6px; background:#f39c12; color:white; border:none;">
                            ➡️
                        </button>
                    </form>
                }
            </div>
        }




    </div>
</body>
</html>
